<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff">
    <TextView
        android:id="@+id/textView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="执行时间："
        android:textColor="#ff4d4d4d"
        android:textSize="13sp"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/implement_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2021-07-16 10:00"
        android:textColor="#ff4d4d4d"
        android:textSize="13sp"
        app:layout_constraintTop_toTopOf="@+id/textView01"
        app:layout_constraintLeft_toRightOf="@+id/textView01"/>
    <LinearLayout
        android:id="@+id/line1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E9E9E9"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/textView01"
        app:layout_constraintLeft_toLeftOf="parent">
    </LinearLayout>
    <TextView
        android:id="@+id/pat_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="徐小小"
        android:textColor="#ff333333"
        android:textSize="16sp"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@+id/line1"
        app:layout_constraintLeft_toLeftOf="@+id/textView01"/>
    <TextView
        android:id="@+id/textView02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="就诊号："
        android:textColor="#ff4d4d4d"
        android:textSize="14sp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/pat_name"
        app:layout_constraintLeft_toLeftOf="@+id/textView01"/>
    <TextView
        android:id="@+id/seek_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12345678"
        android:textColor="#ff4d4d4d"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="@+id/textView02"
        app:layout_constraintLeft_toRightOf="@+id/textView02"/>
    <TextView
        android:id="@+id/textView03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="医嘱项目：尿常规"
        android:textColor="#ff4d4d4d"
        android:textSize="14sp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/textView02"
        app:layout_constraintLeft_toLeftOf="@+id/textView01"/>
    <TextView
        android:id="@+id/advice_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="尿常规"
        android:textColor="#ff4d4d4d"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="@+id/textView03"
        app:layout_constraintLeft_toRightOf="@+id/textView03"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_user_center_more"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="12dp">
    </ImageView>
    <LinearLayout
        android:id="@+id/line2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#E9E9E9"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView03"
        app:layout_constraintLeft_toLeftOf="parent">
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>