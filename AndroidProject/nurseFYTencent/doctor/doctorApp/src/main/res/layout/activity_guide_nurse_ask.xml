<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:background="#fff">
    <include
        android:id="@+id/head_layout"
        layout="@layout/layout_head_base"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/line1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#f4f4f4"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/head_layout">
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/line1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:fillViewport="true">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/circle_blue"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent">
            </ImageView>
            <ImageView
                android:id="@+id/nurse_ask_img1"
                android:layout_width="145dp"
                android:layout_height="255dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="19dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent">
            </ImageView>
            <ImageView
                android:id="@+id/image_icon1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/arrow_blue"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="18dp"
                app:layout_constraintLeft_toRightOf="@+id/nurse_ask_img1"
                app:layout_constraintTop_toTopOf="@+id/nurse_ask_img1">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="申请开通护理咨询"
                android:textColor="#ff4389e1"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                app:layout_constraintTop_toTopOf="@+id/image_icon1"
                app:layout_constraintBottom_toBottomOf="@+id/image_icon1"
                app:layout_constraintLeft_toRightOf="@+id/image_icon1"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="申请开通护理咨询服务：护士要先申请开通护理咨询服务审核通过之后，才可进行发布护理咨询排班。
申请步骤：首先点击“申请”按钮当按钮变成“审核中”这说明申请已提交成功，只需耐心等待。如果审核不通过可看到审核不通过原因，然后进行“再次申请”。"
                android:textColor="#ff383838"
                android:textSize="13sp"
                android:layout_marginTop="19dp"
                android:layout_marginRight="29dp"
                app:layout_constraintTop_toBottomOf="@+id/image_icon1"
                app:layout_constraintLeft_toLeftOf="@+id/image_icon1"
                app:layout_constraintRight_toRightOf="parent"/>

            <ImageView
                android:id="@+id/image_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/download_bg_bottom"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">
            </ImageView>

            <com.gigamole.library.ShadowLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:sl_shadow_angle="90"
                app:sl_shadow_color="@color/grey_txt"
                android:id="@+id/s1"
                app:sl_shadow_distance="3dp"
                app:sl_shadow_radius="2dp"
                app:sl_shadowed="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                app:layout_constraintLeft_toLeftOf="@+id/nurse_ask_img1"
                app:layout_constraintTop_toBottomOf="@+id/nurse_ask_img1">
            <ImageView
                android:id="@+id/nurse_ask_sc1"
                android:layout_width="90dp"
                android:layout_height="195dp"
                >
            </ImageView>
            </com.gigamole.library.ShadowLayout>
            <ImageView
                android:id="@+id/image_circle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/circle_blue_right"
                android:layout_marginTop="80dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/s1">
            </ImageView>
            <ImageView
                android:id="@+id/image_icon2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/arrow_blue"
                app:layout_constraintLeft_toRightOf="@+id/s1"
                app:layout_constraintRight_toLeftOf="@+id/s2"
                app:layout_constraintTop_toTopOf="@+id/s1"
                app:layout_constraintBottom_toBottomOf="@+id/s1">
            </ImageView>

            <com.gigamole.library.ShadowLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:sl_shadow_angle="90"
                app:sl_shadow_color="@color/grey_txt"
                android:id="@+id/s2"
                app:sl_shadow_distance="3dp"
                app:sl_shadow_radius="2dp"
                app:sl_shadowed="true"
                app:layout_constraintLeft_toRightOf="@+id/image_icon2"
                app:layout_constraintRight_toLeftOf="@+id/image_icon3"
                app:layout_constraintTop_toTopOf="@+id/s1">
            <ImageView
                android:id="@+id/nurse_ask_sc2"
                android:layout_width="90dp"
                android:layout_height="195dp"
                >
            </ImageView>
            </com.gigamole.library.ShadowLayout>

            <ImageView
                android:id="@+id/image_icon3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/arrow_blue"
                app:layout_constraintLeft_toRightOf="@+id/s2"
                app:layout_constraintRight_toLeftOf="@+id/s3"
                app:layout_constraintTop_toTopOf="@+id/s1"
                app:layout_constraintBottom_toBottomOf="@+id/s1">
            </ImageView>

            <com.gigamole.library.ShadowLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:sl_shadow_angle="90"
                app:sl_shadow_color="@color/grey_txt"
                android:id="@+id/s3"
                app:sl_shadow_distance="3dp"
                app:sl_shadow_radius="2dp"
                app:sl_shadowed="true"
                android:layout_marginRight="18dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/s1">
            <ImageView
                android:id="@+id/nurse_ask_sc3"
                android:layout_width="90dp"
                android:layout_height="195dp"
                >
            </ImageView>
            </com.gigamole.library.ShadowLayout>

            <ImageView
                android:id="@+id/image_icon4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/arrow_blue"
                android:layout_marginTop="44dp"
                android:layout_marginLeft="20dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/s1">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="护理咨询"
                android:textColor="#ff4389e1"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                app:layout_constraintTop_toTopOf="@+id/image_icon4"
                app:layout_constraintBottom_toBottomOf="@+id/image_icon4"
                app:layout_constraintLeft_toRightOf="@+id/image_icon4"/>
            <ImageView
                android:id="@+id/image_circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/circle_blue_right"
                android:layout_marginTop="109dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/image_icon4">
            </ImageView>
            <TextView
                android:id="@+id/text1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="发布护理咨询：护士可以根据自己的时间来设置护理咨询信息。设置咨询时段、咨询条数以及咨询费用等内容（护理咨询目前是咨询条数固定为20条，免费咨询）。如果阜阳市人民医院的护士发布的护理咨询排班有问题，可以进行修改排班，也可进行删除。如果已经有人在该护理咨询时段咨询了，则不能进行“删除”和“修改”操作。
"
                android:textColor="#ff383838"
                android:textSize="13sp"
                android:layout_marginTop="19dp"
                android:layout_marginRight="20dp"
                app:layout_constraintTop_toBottomOf="@+id/image_icon4"
                app:layout_constraintLeft_toLeftOf="@+id/image_icon4"
                app:layout_constraintRight_toLeftOf="@+id/nurse_ask_img2"/>
            <ImageView
                android:id="@+id/nurse_ask_img2"
                android:layout_width="145dp"
                android:layout_height="255dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="34dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/image_icon4">
            </ImageView>

            <ImageView
                android:id="@+id/bg1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/center_bg1"
                android:layout_marginTop="27dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/nurse_ask_img2">
            </ImageView>
            <com.gigamole.library.ShadowLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:sl_shadow_angle="90"
                app:sl_shadow_color="@color/grey_txt"
                android:id="@+id/s4"
                app:sl_shadow_distance="3dp"
                app:sl_shadow_radius="2dp"
                app:sl_shadowed="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="55dp"
                app:layout_constraintLeft_toLeftOf="@+id/nurse_ask_img1"
                app:layout_constraintTop_toBottomOf="@+id/nurse_ask_img2">
                <ImageView
                    android:id="@+id/nurse_ask_sc4"
                    android:layout_width="90dp"
                    android:layout_height="195dp"
                    >
                </ImageView>
            </com.gigamole.library.ShadowLayout>
            <ImageView
                android:id="@+id/image_icon5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/download_bg2"
                app:layout_constraintLeft_toRightOf="@+id/s4"
                app:layout_constraintRight_toLeftOf="@+id/s5"
                app:layout_constraintTop_toTopOf="@+id/s4"
                app:layout_constraintBottom_toBottomOf="@+id/s4">
            </ImageView>

            <com.gigamole.library.ShadowLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:sl_shadow_angle="90"
                app:sl_shadow_color="@color/grey_txt"
                android:id="@+id/s5"
                app:sl_shadow_distance="3dp"
                app:sl_shadow_radius="2dp"
                app:sl_shadowed="true"
                app:layout_constraintLeft_toRightOf="@+id/image_icon5"
                app:layout_constraintRight_toLeftOf="@+id/image_icon6"
                app:layout_constraintTop_toTopOf="@+id/s4">
                <ImageView
                    android:id="@+id/nurse_ask_sc5"
                    android:layout_width="90dp"
                    android:layout_height="195dp"
                    >
                </ImageView>
            </com.gigamole.library.ShadowLayout>

            <ImageView
                android:id="@+id/image_icon6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/arrow_blue"
                app:layout_constraintLeft_toRightOf="@+id/s5"
                app:layout_constraintRight_toLeftOf="@+id/s6"
                app:layout_constraintTop_toTopOf="@+id/s4"
                app:layout_constraintBottom_toBottomOf="@+id/s4">
            </ImageView>

            <com.gigamole.library.ShadowLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:sl_shadow_angle="90"
                app:sl_shadow_color="@color/grey_txt"
                android:id="@+id/s6"
                app:sl_shadow_distance="3dp"
                app:sl_shadow_radius="2dp"
                app:sl_shadowed="true"
                android:layout_marginRight="18dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/s4">
                <ImageView
                    android:id="@+id/nurse_ask_sc6"
                    android:layout_width="90dp"
                    android:layout_height="195dp"
                    >
                </ImageView>
            </com.gigamole.library.ShadowLayout>


            <ImageView
                android:id="@+id/nurse_ask_img3"
                android:layout_width="145dp"
                android:layout_height="255dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="36dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/s4">
            </ImageView>
            <ImageView
                android:id="@+id/image_icon7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/patient_icon"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="18dp"
                app:layout_constraintLeft_toRightOf="@+id/nurse_ask_img3"
                app:layout_constraintTop_toTopOf="@+id/nurse_ask_img3">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="咨询记录"
                android:textColor="#ff4389e1"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                app:layout_constraintTop_toTopOf="@+id/image_icon7"
                app:layout_constraintBottom_toBottomOf="@+id/image_icon7"
                app:layout_constraintLeft_toRightOf="@+id/image_icon7"/>

            <ImageView
                android:id="@+id/image_icon_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/circle_blue_right"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="18dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/s7">
            </ImageView>

            <TextView
                android:id="@+id/text2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="点击“咨询记录”可根据时间查看咨询过的历史记录列表；点击列表可查看该次护理咨询的医患之间的聊天记录、患者主诉和健康档案信息。"
                android:textColor="#ff383838"
                android:textSize="13sp"
                android:layout_marginTop="19dp"
                android:layout_marginRight="29dp"
                app:layout_constraintTop_toBottomOf="@+id/image_icon7"
                app:layout_constraintLeft_toLeftOf="@+id/image_icon7"
                app:layout_constraintRight_toRightOf="parent"/>

            <com.gigamole.library.ShadowLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:sl_shadow_angle="90"
                app:sl_shadow_color="@color/grey_txt"
                android:id="@+id/s7"
                app:sl_shadow_distance="3dp"
                app:sl_shadow_radius="2dp"
                app:sl_shadowed="true"
                android:layout_marginTop="13dp"
                app:layout_constraintLeft_toLeftOf="@+id/text2"
                app:layout_constraintTop_toBottomOf="@+id/text2">
                <ImageView
                    android:id="@+id/nurse_ask_sc7"
                    android:layout_width="85dp"
                    android:layout_height="185dp"
                    >
                </ImageView>
            </com.gigamole.library.ShadowLayout>
            <com.gigamole.library.ShadowLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:sl_shadow_angle="90"
                app:sl_shadow_color="@color/grey_txt"
                android:id="@+id/s8"
                app:sl_shadow_distance="3dp"
                app:sl_shadow_radius="2dp"
                app:sl_shadowed="true"
                app:layout_constraintLeft_toRightOf="@+id/s7"
                app:layout_constraintRight_toRightOf="@+id/text2"
                app:layout_constraintTop_toTopOf="@+id/s7">
                <ImageView
                    android:id="@+id/nurse_ask_sc8"
                    android:layout_width="85dp"
                    android:layout_height="185dp"
                    >
                </ImageView>
            </com.gigamole.library.ShadowLayout>

            <ImageView
                android:id="@+id/image_icon_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/circle_blue"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@+id/text3">
            </ImageView>
            <ImageView
                android:id="@+id/image_icon8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/patient_icon"
                android:layout_marginTop="19dp"
                android:layout_marginLeft="20dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@+id/nurse_ask_img4">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="咨询评价"
                android:textColor="#ff4389e1"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                app:layout_constraintTop_toTopOf="@+id/image_icon8"
                app:layout_constraintBottom_toBottomOf="@+id/image_icon8"
                app:layout_constraintLeft_toRightOf="@+id/image_icon8"/>
            <TextView
                android:id="@+id/text3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="每次护理咨询结束之后，患者都可以对当前护士针对本次咨询服务进行评价。护士点击“护理咨询评价”可以查看患者对自己的所有咨询评价记录。"
                android:textColor="#ff383838"
                android:textSize="13sp"
                android:layout_marginTop="19dp"
                android:layout_marginRight="20dp"
                app:layout_constraintTop_toBottomOf="@+id/image_icon8"
                app:layout_constraintLeft_toLeftOf="@+id/image_icon8"
                app:layout_constraintRight_toLeftOf="@+id/nurse_ask_img4"/>
            <ImageView
                android:id="@+id/nurse_ask_img4"
                android:layout_width="145dp"
                android:layout_height="255dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="28dp"
                android:layout_marginBottom="54dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/s7"
                app:layout_constraintBottom_toBottomOf="parent">
            </ImageView>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    <com.tencent.qcloud.tuikit.tuichat.fromApp.view.MyTextView
        android:id="@+id/work_nurse_ask_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_corner_btn_group1_click"
        android:textColor="#fff"
        android:paddingLeft="20dp"
        android:paddingTop="8dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="8dp"
        android:text="护理咨询"
        android:textSize="@dimen/font_14"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line1"/>
</androidx.constraintlayout.widget.ConstraintLayout>
