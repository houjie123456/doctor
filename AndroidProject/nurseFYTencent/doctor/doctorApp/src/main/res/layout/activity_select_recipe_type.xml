<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:paddingBottom="30dp"
    android:clipToPadding="true">

    <RelativeLayout
        android:id="@+id/head_layout"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:background="#fff"
        android:paddingRight="10dp"
        android:paddingLeft="18dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/head_top_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_close"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"/>
        <com.tencent.qcloud.tuikit.tuichat.fromApp.view.MyTextView
            android:id="@+id/head_top_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#282828"
            android:textSize="@dimen/font_18"
            android:gravity="center"
            android:text="患者来源"
            android:layout_centerInParent="true"/>

    </RelativeLayout>


    <TextView
        android:id="@+id/textView01"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="互联网医院患者"
        android:paddingTop="17dp"
        android:paddingBottom="17dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="16dp"
        android:textSize="18sp"
        android:textColor="#4D4D4D"
        android:gravity="center"
        android:background="@drawable/shape_corner_click"
        app:layout_constraintTop_toBottomOf="@+id/head_layout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/textView02"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="线下住院患者"
        android:paddingTop="17dp"
        android:paddingBottom="17dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="16dp"
        android:textSize="18sp"
        android:textColor="#4D4D4D"
        android:gravity="center"
        android:background="@drawable/shape_corner_click"
        app:layout_constraintTop_toBottomOf="@+id/textView01"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/textView03"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="线下门诊患者"
        android:paddingTop="17dp"
        android:paddingBottom="17dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="16dp"
        android:textSize="18sp"
        android:textColor="#4D4D4D"
        android:gravity="center"
        android:background="@drawable/shape_corner_click"
        app:layout_constraintTop_toBottomOf="@+id/textView02"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>