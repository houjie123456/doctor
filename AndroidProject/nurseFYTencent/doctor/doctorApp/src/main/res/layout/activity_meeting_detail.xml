<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:background="#fff">

    <include
        android:id="@+id/head_layout"
        layout="@layout/layout_head_base"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/head_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/meeting_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                android:id="@+id/meeting_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="多学科联合，不断提升医疗服务能力，促进“和心脏病”学科发展"
                android:textColor="#ff1b1b1b"
                android:textSize="16sp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/meeting_image"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <TextView
                android:id="@+id/meeting_speaker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="主讲人：黄成奇、许颍"
                android:textColor="#ff666666"
                android:textSize="12sp"
                android:layout_marginTop="17dp"
                app:layout_constraintTop_toBottomOf="@+id/meeting_title"
                app:layout_constraintLeft_toLeftOf="@+id/meeting_title"/>

            <ImageView
                android:id="@+id/img_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/meeting_time"
                android:layout_marginTop="13dp"
                app:layout_constraintTop_toBottomOf="@+id/meeting_speaker"
                app:layout_constraintLeft_toLeftOf="@+id/meeting_title"/>

            <TextView
                android:id="@+id/meeting_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2020年3月15日9:00-11:00"
                android:textColor="#ff4d4d4d"
                android:textSize="12sp"
                android:layout_marginLeft="5dp"
                app:layout_constraintTop_toTopOf="@+id/img_time"
                app:layout_constraintBottom_toBottomOf="@+id/img_time"
                app:layout_constraintLeft_toRightOf="@+id/img_time"/>

            <ImageView
                android:id="@+id/img_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/meeting_place"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/img_time"
                app:layout_constraintLeft_toLeftOf="@+id/meeting_title"/>

            <TextView
                android:id="@+id/meeting_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="安徽省阜阳市人民医院大会议室312室"
                android:textColor="#ff4d4d4d"
                android:textSize="12sp"
                android:layout_marginLeft="5dp"
                app:layout_constraintTop_toTopOf="@+id/img_place"
                app:layout_constraintBottom_toBottomOf="@+id/img_place"
                app:layout_constraintLeft_toRightOf="@+id/img_place"/>

            <LinearLayout
                android:id="@+id/layout_mid"
                android:layout_width="match_parent"
                android:layout_height="7dp"
                android:orientation="vertical"
                android:background="#F0F0F0"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/img_place"
                app:layout_constraintLeft_toLeftOf="parent">
            </LinearLayout>




            <LinearLayout
                android:id="@+id/layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                app:layout_constraintTop_toBottomOf="@+id/layout_mid"
                app:layout_constraintLeft_toLeftOf="parent">
                <LinearLayout
                    android:id="@+id/people_btn1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="18dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1"
                    app:layout_constraintTop_toBottomOf="@+id/layout_mid"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:visibility="gone">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="参会人员"
                        android:textColor="#ff666666"
                        android:textSize="15sp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/people_btn2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="18dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1"
                    app:layout_constraintTop_toBottomOf="@+id/layout_mid"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:visibility="visible">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="参会人员"
                        android:textColor="#ff4497ff"
                        android:textSize="15sp"/>
                    <LinearLayout
                        android:layout_width="43dp"
                        android:layout_height="3dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/shape_corner_state">
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/content_btn1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1"
                    app:layout_constraintTop_toBottomOf="@+id/layout_mid"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:visibility="visible">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="会议内容"
                        android:textColor="#ff666666"
                        android:textSize="15sp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/content_btn2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1"
                    app:layout_constraintTop_toBottomOf="@+id/layout_mid"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:visibility="gone">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="会议内容"
                        android:textColor="#ff4497ff"
                        android:textSize="15sp"/>
                    <LinearLayout
                        android:layout_width="43dp"
                        android:layout_height="3dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/shape_corner_state">
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ask_btn1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="18dp"
                    android:layout_marginTop="18dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1"
                    app:layout_constraintTop_toBottomOf="@+id/layout_mid"
                    app:layout_constraintRight_toRightOf="parent"
                    android:visibility="visible">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="会议要求"
                        android:textColor="#ff666666"
                        android:textSize="15sp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ask_btn2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="18dp"
                    android:layout_marginTop="18dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1"
                    app:layout_constraintTop_toBottomOf="@+id/layout_mid"
                    app:layout_constraintRight_toRightOf="parent"
                    android:visibility="gone">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="会议要求"
                        android:textColor="#ff4497ff"
                        android:textSize="15sp"/>
                    <LinearLayout
                        android:layout_width="43dp"
                        android:layout_height="3dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/shape_corner_state">
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>



            <LinearLayout
                android:id="@+id/layout_mid2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:orientation="vertical"
                android:background="#F2F2F2"
                app:layout_constraintTop_toBottomOf="@+id/layout"
                app:layout_constraintLeft_toLeftOf="parent">
            </LinearLayout>

            <TextView
                android:id="@+id/people_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="心内科科室主任：黄成奇、心内科主治医师：许颍、心内
        科主任：刘伟、副主任：胡春阳、辛国勇带领科室全体医生参加"
                android:textColor="#ff666666"
                android:textSize="13sp"
                android:lineSpacingMultiplier="1.5"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                app:layout_constraintTop_toBottomOf="@+id/layout_mid2"
                app:layout_constraintLeft_toLeftOf="parent"
                android:visibility="visible"/>
            <TextView
                android:id="@+id/content_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="为提升业务能力，加强学科建设，更好地服务患者，3月15日，利用心
        内科科室交班时间，核医学科黄成奇主任带领科室业务骨干许颍主治医师到心内科进行了一场图
        文并茂的学术交流。 许颍医生主要介绍了核医学显像及18F-FDG心肌代谢显像的先进性及实
        用性。详细阐述负荷心肌灌注显像及静息心肌灌注显像在冠心病的诊断、鉴别诊断中的应用，临床
        检查的适用范围：18F-FDG心肌代谢显像在心肌梗死后判断存活心肌检测中的临价值。"
                android:textColor="#ff666666"
                android:textSize="13sp"
                android:lineSpacingMultiplier="1.5"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                app:layout_constraintTop_toBottomOf="@+id/layout_mid2"
                app:layout_constraintLeft_toLeftOf="parent"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/ask_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="为提升业务能力，加强学科建设，更好地服务患者，3月15日，利用心
        内科科室交班时间，核医学科黄成奇主任带领科室业务骨干许颍主治医师到心内科进行了一场图
        文并茂的学术交流。 许颍医生主要介绍了核医学显像及18F-FDG心肌代谢显像的先进性及实
        用性。详细阐述负荷心肌灌注显像及静息心肌灌注显像在冠心病的诊断、鉴别诊断中的应用，临床
        检查的适用范围：18F-FDG心肌代谢显像在心肌梗死后判断存活心肌检测中的临价值。"
                android:textColor="#ff666666"
                android:textSize="13sp"
                android:lineSpacingMultiplier="1.5"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                app:layout_constraintTop_toBottomOf="@+id/layout_mid2"
                app:layout_constraintLeft_toLeftOf="parent"
                android:visibility="gone"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>