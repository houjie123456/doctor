<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff">

    <LinearLayout
        android:id="@+id/list_item_line2"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#F3F3F5"
        android:orientation="horizontal"
        android:gravity="center|left"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <TextView
            android:id="@+id/order_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2020年12月7日 星期一"
            android:textColor="#ff666666"
            android:textSize="12sp"
            android:layout_marginLeft="16dp"
            />
    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="11dp"
        app:layout_constraintTop_toBottomOf="@+id/list_item_line2">
        <com.tencent.qcloud.tuikit.tuichat.fromApp.view.RoundImageView
            android:id="@+id/img_head"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/img_person"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="13dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/order_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:text="订单号：00020201206"
            android:textColor="#ff333333"
            android:textSize="14sp"
            app:layout_constraintLeft_toRightOf="@+id/img_head"
            app:layout_constraintTop_toTopOf="@+id/img_head" />

        <TextView
            android:id="@+id/pat_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="患者姓名：许云"
            android:textColor="#ff666666"
            android:textSize="13sp"
            app:layout_constraintLeft_toLeftOf="@+id/order_id"
            app:layout_constraintTop_toBottomOf="@+id/order_id" />
        <TextView
            android:id="@+id/order_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单状态：支付"
            android:textColor="#ff666666"
            android:textSize="13sp"
            android:layout_marginTop="9dp"
            app:layout_constraintTop_toBottomOf="@+id/pat_name"
            app:layout_constraintLeft_toLeftOf="@+id/order_id"/>
        <TextView
            android:id="@+id/order_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="院外护理"
            android:textColor="#ff666666"
            android:textSize="12sp"
            android:layout_marginRight="12dp"
            app:layout_constraintTop_toTopOf="@+id/order_id"
            app:layout_constraintRight_toRightOf="parent"/>
        <TextView
            android:id="@+id/order_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="28.77"
            android:textColor="#ff333333"
            android:textSize="16sp"
            android:layout_marginTop="23dp"
            app:layout_constraintTop_toBottomOf="@+id/order_type"
            app:layout_constraintLeft_toLeftOf="@+id/order_type"
            app:layout_constraintRight_toRightOf="@+id/order_type"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>