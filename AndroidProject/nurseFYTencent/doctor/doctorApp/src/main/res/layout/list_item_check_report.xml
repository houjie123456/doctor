<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff">
    <TextView
        android:id="@+id/check_report_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="心脏彩超"
        android:textColor="#ff333333"
        android:textSize="14sp"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="33dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/check_report_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2020-08-27"
        android:textColor="#ff666666"
        android:textSize="12sp"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@+id/check_report_name"
        app:layout_constraintLeft_toLeftOf="@+id/check_report_name"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_auth_more"
        android:layout_marginRight="33dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f3f3f3"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/check_report_date">

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>