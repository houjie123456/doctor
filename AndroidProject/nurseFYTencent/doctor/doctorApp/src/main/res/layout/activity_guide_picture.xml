<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:background="#fff">
    <include
        android:id="@+id/head_layout"
        layout="@layout/layout_head_base"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/line1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#f4f4f4"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/head_layout">
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/line1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:fillViewport="true">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/circle_blue"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent">
            </ImageView>
            <ImageView
                android:id="@+id/picture_img1"
                android:layout_width="145dp"
                android:layout_height="255dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="19dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent">
            </ImageView>
            <ImageView
                android:id="@+id/image_icon1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/arrow_blue"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="18dp"
                app:layout_constraintLeft_toRightOf="@+id/picture_img1"
                app:layout_constraintTop_toTopOf="@+id/picture_img1">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="图文问诊"
                android:textColor="#ff4389e1"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                app:layout_constraintTop_toTopOf="@+id/image_icon1"
                app:layout_constraintBottom_toBottomOf="@+id/image_icon1"
                app:layout_constraintLeft_toRightOf="@+id/image_icon1"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="图文问诊是帮助患者处理咨询的问题，医生设置图文问诊，可以设置图文问诊的时长、天数以及金额；医生如果比较忙来不及回复患者信息时，可以提前将问诊状态设置为忙碌；医生可以看到患者的问诊记录和问诊评价信息。"
                android:textColor="#ff383838"
                android:textSize="13sp"
                android:layout_marginTop="19dp"
                android:layout_marginRight="29dp"
                app:layout_constraintTop_toBottomOf="@+id/image_icon1"
                app:layout_constraintLeft_toLeftOf="@+id/image_icon1"
                app:layout_constraintRight_toRightOf="parent"/>

            <ImageView
                android:id="@+id/image_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/download_bg_bottom"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">
            </ImageView>

            <com.gigamole.library.ShadowLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:sl_shadow_angle="90"
                app:sl_shadow_color="@color/grey_txt"
                android:id="@+id/s1"
                app:sl_shadow_distance="3dp"
                app:sl_shadow_radius="2dp"
                app:sl_shadowed="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                app:layout_constraintLeft_toLeftOf="@+id/picture_img1"
                app:layout_constraintTop_toBottomOf="@+id/picture_img1">
            <ImageView
                android:id="@+id/picture_sc1"
                android:layout_width="90dp"
                android:layout_height="195dp"
                >
            </ImageView>
            </com.gigamole.library.ShadowLayout>
            <ImageView
                android:id="@+id/image_circle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/circle_blue_right"
                android:layout_marginTop="80dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/s1">
            </ImageView>
            <ImageView
                android:id="@+id/image_icon2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/arrow_blue"
                app:layout_constraintLeft_toRightOf="@+id/s1"
                app:layout_constraintRight_toLeftOf="@+id/s2"
                app:layout_constraintTop_toTopOf="@+id/s1"
                app:layout_constraintBottom_toBottomOf="@+id/s1">
            </ImageView>

            <com.gigamole.library.ShadowLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:sl_shadow_angle="90"
                app:sl_shadow_color="@color/grey_txt"
                android:id="@+id/s2"
                app:sl_shadow_distance="3dp"
                app:sl_shadow_radius="2dp"
                app:sl_shadowed="true"
                app:layout_constraintLeft_toRightOf="@+id/image_icon2"
                app:layout_constraintRight_toLeftOf="@+id/image_icon3"
                app:layout_constraintTop_toTopOf="@+id/s1">
            <ImageView
                android:id="@+id/picture_sc2"
                android:layout_width="90dp"
                android:layout_height="195dp"
                >
            </ImageView>
            </com.gigamole.library.ShadowLayout>
            <ImageView
                android:id="@+id/image_icon3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/arrow_blue"
                app:layout_constraintLeft_toRightOf="@+id/s2"
                app:layout_constraintRight_toLeftOf="@+id/s3"
                app:layout_constraintTop_toTopOf="@+id/s1"
                app:layout_constraintBottom_toBottomOf="@+id/s1">
            </ImageView>

            <com.gigamole.library.ShadowLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:sl_shadow_angle="90"
                app:sl_shadow_color="@color/grey_txt"
                android:id="@+id/s3"
                app:sl_shadow_distance="3dp"
                app:sl_shadow_radius="2dp"
                app:sl_shadowed="true"
                android:layout_marginRight="18dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/s1">
            <ImageView
                android:id="@+id/picture_sc3"
                android:layout_width="90dp"
                android:layout_height="195dp"
                >
            </ImageView>
            </com.gigamole.library.ShadowLayout>





        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    <com.tencent.qcloud.tuikit.tuichat.fromApp.view.MyTextView
        android:id="@+id/work_picture_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_corner_btn_group1_click"
        android:textColor="#fff"
        android:paddingLeft="20dp"
        android:paddingTop="8dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="8dp"
        android:text="图文问诊"
        android:textSize="@dimen/font_14"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line1"/>
</androidx.constraintlayout.widget.ConstraintLayout>
