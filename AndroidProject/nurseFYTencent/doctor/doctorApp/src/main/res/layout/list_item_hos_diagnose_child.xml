<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="18dp"
    android:paddingBottom="18dp"
    android:background="#f7f7f7">
    <TextView
        android:id="@+id/textView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="就诊号:"
        android:textColor="#ff333333"
        android:textSize="14sp"
        android:layout_marginLeft="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/diagnose_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:textColor="#ff333333"
        android:textSize="14sp"
        android:layout_marginLeft="28dp"
        app:layout_constraintTop_toTopOf="@+id/textView01"
        app:layout_constraintLeft_toRightOf="@+id/textView01"/>

    <LinearLayout
        android:id="@+id/layout01"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="vertical"
        android:background="#E6E6E6"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        app:layout_constraintTop_toBottomOf="@+id/textView01">
    </LinearLayout>

    <TextView
        android:id="@+id/textView02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="就诊科室:"
        android:textColor="#ff333333"
        android:textSize="14sp"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="36dp"
        app:layout_constraintTop_toBottomOf="@+id/layout01"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/diagnose_dept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:textColor="#ff333333"
        android:textSize="14sp"
        android:layout_marginLeft="28dp"
        app:layout_constraintTop_toTopOf="@+id/textView02"
        app:layout_constraintLeft_toRightOf="@+id/textView02"/>

    <LinearLayout
        android:id="@+id/layout02"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="vertical"
        android:background="#E6E6E6"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        app:layout_constraintTop_toBottomOf="@+id/textView02">
    </LinearLayout>

    <TextView
        android:id="@+id/textView03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="诊断列表:"
        android:textColor="#ff333333"
        android:textSize="14sp"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="36dp"
        app:layout_constraintTop_toBottomOf="@+id/layout02"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/diagnose_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:textColor="#ff333333"
        android:textSize="14sp"
        android:layout_marginLeft="28dp"
        app:layout_constraintTop_toTopOf="@+id/textView03"
        app:layout_constraintLeft_toRightOf="@+id/textView03"/>

