<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:background="#fff">
    <include
        android:id="@+id/head_layout"
        layout="@layout/layout_head_base"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/line1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#f4f4f4"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/head_layout">
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/line1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/center_bg1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/center_bg1"
                android:layout_marginTop="200dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@+id/center_img1">
            </ImageView>
            <ImageView
                android:id="@+id/center_img1"
                android:layout_width="145dp"
                android:layout_height="255dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="19dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent">
            </ImageView>
            <ImageView
                android:id="@+id/image_icon1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/arrow_blue"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="18dp"
                app:layout_constraintLeft_toRightOf="@+id/center_img1"
                app:layout_constraintTop_toTopOf="@+id/center_img1">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="个人中心"
                android:textColor="#ff4389e1"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                app:layout_constraintTop_toTopOf="@+id/image_icon1"
                app:layout_constraintBottom_toBottomOf="@+id/image_icon1"
                app:layout_constraintLeft_toRightOf="@+id/image_icon1"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="个人中心主要模块有：护士实名认证信息、我的收入以及我的名片。"
                android:textColor="#ff383838"
                android:textSize="13sp"
                android:layout_marginTop="19dp"
                android:layout_marginRight="29dp"
                app:layout_constraintTop_toBottomOf="@+id/image_icon1"
                app:layout_constraintLeft_toLeftOf="@+id/image_icon1"
                app:layout_constraintRight_toRightOf="parent"/>

            <ImageView
                android:id="@+id/image_circle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/circle_blue_right"
                android:layout_marginTop="37dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/center_img1">
            </ImageView>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingBottom="50dp"
                app:layout_constraintTop_toTopOf="@+id/center_bg1"
                app:layout_constraintBottom_toBottomOf="@+id/center_bg1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/center_img2">
                <ImageView
                    android:id="@+id/image_icon2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/download_bg2"
                    android:layout_marginTop="14dp"
                    android:layout_marginLeft="18dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent">
                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="实名认证"
                    android:textColor="#ffffffff"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    app:layout_constraintTop_toTopOf="@+id/image_icon2"
                    app:layout_constraintBottom_toBottomOf="@+id/image_icon2"
                    app:layout_constraintLeft_toRightOf="@+id/image_icon2"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="实名认证：\n
护士初次登录需要进行实名认证，实名认证后等待审核，审核成功才可以使用工作台中的功能。"
                    android:textColor="#ffffffff"
                    android:textSize="13sp"
                    android:layout_marginTop="19dp"
                    android:layout_marginRight="29dp"
                    app:layout_constraintTop_toBottomOf="@+id/image_icon2"
                    app:layout_constraintLeft_toLeftOf="@+id/image_icon2"
                    app:layout_constraintRight_toRightOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>


            <ImageView
                android:id="@+id/center_img2"
                android:layout_width="125dp"
                android:layout_height="265dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="17dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/center_img1">
            </ImageView>

            <ImageView
                android:id="@+id/center_img3"
                android:layout_width="145dp"
                android:layout_height="255dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/center_img2">
            </ImageView>
            <ImageView
                android:id="@+id/image_icon3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/arrow_blue"
                android:layout_marginTop="44dp"
                android:layout_marginLeft="20dp"
                app:layout_constraintLeft_toRightOf="@+id/center_img3"
                app:layout_constraintTop_toTopOf="@+id/center_img3">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的收入"
                android:textColor="#ff4389e1"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                app:layout_constraintTop_toTopOf="@+id/image_icon3"
                app:layout_constraintBottom_toBottomOf="@+id/image_icon3"
                app:layout_constraintLeft_toRightOf="@+id/image_icon3"/>
            <ImageView
                android:id="@+id/image_circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/circle_blue"
                android:layout_marginTop="40dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/center_img3">
            </ImageView>
            <TextView
                android:id="@+id/text1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="我的收入：具体月份的总收益、交易订单列表，可以根据服务类型和订单状态进行筛选，点击交易订单可以查交易详情。
"
                android:textColor="#ff383838"
                android:textSize="13sp"
                android:layout_marginTop="19dp"
                android:layout_marginRight="20dp"
                app:layout_constraintTop_toBottomOf="@+id/image_icon3"
                app:layout_constraintLeft_toLeftOf="@+id/image_icon3"
                app:layout_constraintRight_toRightOf="parent"/>

            <com.gigamole.library.ShadowLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:sl_shadow_angle="90"
                app:sl_shadow_color="@color/grey_txt"
                android:id="@+id/s1"
                app:sl_shadow_distance="3dp"
                app:sl_shadow_radius="2dp"
                app:sl_shadowed="true"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="25dp"
                app:layout_constraintLeft_toLeftOf="@+id/text1"
                app:layout_constraintRight_toRightOf="@+id/text1"
                app:layout_constraintTop_toBottomOf="@+id/text1">
            <ImageView
                android:id="@+id/center_sc1"
                android:layout_width="100dp"
                android:layout_height="195dp"
                >
            </ImageView>
            </com.gigamole.library.ShadowLayout>

            <ImageView
                android:id="@+id/center_img4"
                android:layout_width="145dp"
                android:layout_height="255dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="38dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/s1"
                app:layout_constraintBottom_toBottomOf="parent">
            </ImageView>
            <ImageView
                android:id="@+id/image_icon4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/arrow_blue"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="20dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@+id/center_img4">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的名片"
                android:textColor="#ff4389e1"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                app:layout_constraintTop_toTopOf="@+id/image_icon4"
                app:layout_constraintBottom_toBottomOf="@+id/image_icon4"
                app:layout_constraintLeft_toRightOf="@+id/image_icon4"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="我的名片：\n
实名认证之后会产生护士的二维码，方便患者进行扫码咨询，建立医患关系。"
                android:textColor="#ff383838"
                android:textSize="13sp"
                android:layout_marginTop="19dp"
                android:layout_marginRight="20dp"
                app:layout_constraintTop_toBottomOf="@+id/image_icon4"
                app:layout_constraintLeft_toLeftOf="@+id/image_icon4"
                app:layout_constraintRight_toLeftOf="@+id/center_img4"/>




            <ImageView
                android:id="@+id/image_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/download_bg_bottom"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">
            </ImageView>






        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    <com.tencent.qcloud.tuikit.tuichat.fromApp.view.MyTextView
        android:id="@+id/work_center_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_corner_btn_group1_click"
        android:textColor="#fff"
        android:paddingLeft="20dp"
        android:paddingTop="8dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="8dp"
        android:text="个人中心"
        android:textSize="@dimen/font_14"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line1"/>
</androidx.constraintlayout.widget.ConstraintLayout>
