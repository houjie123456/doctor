<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    android:fitsSystemWindows="true"
    android:clipToPadding="true">

    <include
        android:id="@+id/head_layout"
        layout="@layout/layout_head_base"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/list_item_line1"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#f4f4f4"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/head_layout">
    </LinearLayout>

    <com.tencent.qcloud.tuikit.tuichat.fromApp.view.MyTextView
        android:id="@+id/myTextView26"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="15dp"
        android:text="就诊人"
        android:textColor="#525252"
        android:textSize="@dimen/font_15"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/list_item_line1" />

    <com.tencent.qcloud.tuikit.tuichat.fromApp.view.MyTextView
        android:id="@+id/create_recipe_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="right|center"
        android:paddingRight="10dp"
        android:text="请选择就诊人"
        android:textColor="#525252"
        android:textSize="@dimen/font_14"
        app:layout_constraintBottom_toBottomOf="@+id/myTextView26"
        app:layout_constraintLeft_toRightOf="@+id/myTextView26"
        app:layout_constraintRight_toLeftOf="@+id/imageView16"
        app:layout_constraintTop_toTopOf="@+id/myTextView26" />

    <ImageView
        android:id="@+id/imageView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/myTextView26"
        app:layout_constraintLeft_toRightOf="@+id/create_recipe_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/myTextView26"
        app:srcCompat="@drawable/img_auth_more" />

    <LinearLayout
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#f4f4f4"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myTextView26"></LinearLayout>

    <com.tencent.qcloud.tuikit.tuichat.fromApp.view.MyTextView
        android:id="@+id/myTextView27"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="15dp"
        android:text="院内就诊记录"
        android:textColor="#626262"
        android:textSize="@dimen/font_15"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line2" />

    <com.tencent.qcloud.tuikit.tuichat.fromApp.view.MyTextView
        android:id="@+id/visit_record"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="right|center"
        android:paddingRight="10dp"
        android:text="去查看"
        android:textColor="#626262"
        android:textSize="@dimen/font_14"
        app:layout_constraintBottom_toBottomOf="@+id/myTextView27"
        app:layout_constraintLeft_toRightOf="@+id/myTextView27"
        app:layout_constraintRight_toLeftOf="@+id/img_more"
        app:layout_constraintTop_toTopOf="@+id/myTextView27" />

    <ImageView
        android:id="@+id/img_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/myTextView27"
        app:layout_constraintLeft_toRightOf="@+id/visit_record"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/myTextView27"
        app:srcCompat="@drawable/img_auth_more" />

    <LinearLayout
        android:id="@+id/line21"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f4f4f4"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myTextView27">
    </LinearLayout>

    <com.tencent.qcloud.tuikit.tuichat.fromApp.view.MyTextView
        android:id="@+id/myTextView28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="15dp"
        android:text="报告单查询"
        android:textColor="#626262"
        android:textSize="@dimen/font_15"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line21" />

    <com.tencent.qcloud.tuikit.tuichat.fromApp.view.MyTextView
        android:id="@+id/report_search"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="right|center"
        android:paddingRight="10dp"
        android:text="去查看"
        android:textColor="#626262"
        android:textSize="@dimen/font_14"
        app:layout_constraintBottom_toBottomOf="@+id/myTextView28"
        app:layout_constraintLeft_toRightOf="@+id/myTextView28"
        app:layout_constraintRight_toLeftOf="@+id/img_more1"
        app:layout_constraintTop_toTopOf="@+id/myTextView28" />

    <ImageView
        android:id="@+id/img_more1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/myTextView28"
        app:layout_constraintLeft_toRightOf="@+id/report_search"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/myTextView28"
        app:srcCompat="@drawable/img_auth_more" />

    <LinearLayout
        android:id="@+id/line22"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f4f4f4"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myTextView28">
    </LinearLayout>

    <com.tencent.qcloud.tuikit.tuichat.fromApp.view.MyTextView
        android:id="@+id/myTextView101"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="15dp"
        android:text="是否为复诊患者"
        android:textColor="#525252"
        android:textSize="@dimen/font_15"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line22" />
    <com.tencent.qcloud.tuikit.tuichat.fromApp.view.MyTextView
        android:id="@+id/switch_on_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="是"
        android:textColor="#fff"
        android:textSize="@dimen/font_16"
        app:layout_constraintLeft_toLeftOf="@+id/switch_btn"
        app:layout_constraintTop_toTopOf="@+id/switch_btn"
        app:layout_constraintBottom_toBottomOf="@+id/switch_btn"/>
    <com.tencent.qcloud.tuikit.tuichat.fromApp.view.MyTextView
        android:id="@+id/switch_off_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:text="否"
        android:textColor="#8e8e8e"
        android:textSize="@dimen/font_16"
        app:layout_constraintRight_toRightOf="@+id/switch_btn"
        app:layout_constraintTop_toTopOf="@+id/switch_btn"
        app:layout_constraintBottom_toBottomOf="@+id/switch_btn"/>
    <Switch
        android:id="@+id/switch_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:switchMinWidth="40dp"
        android:thumb="@drawable/switch_custom_thumb_selector"
        android:track="@drawable/switch_custom_track_selector"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/myTextView101"
        app:layout_constraintBottom_toBottomOf="@+id/myTextView101"/>
    <!--<EditText-->
        <!--android:id="@+id/create_recipe_content"-->
        <!--android:layout_width="0dp"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:hint="请输入相关诊断说明"-->
        <!--android:lines="5"-->
        <!--android:paddingBottom="10dp"-->
        <!--android:paddingLeft="16dp"-->
        <!--android:paddingRight="16dp"-->
        <!--android:paddingTop="10dp"-->
