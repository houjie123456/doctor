<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:background="#fff">
    <include
        android:id="@+id/head_layout"
        layout="@layout/layout_head_base"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/line1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#f4f4f4"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/head_layout">
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/line1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/download_bg1"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent">
            </ImageView>
            <ImageView
                android:id="@+id/download_img1"
                android:layout_width="145dp"
                android:layout_height="255dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="19dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent">
            </ImageView>
            <ImageView
                android:id="@+id/image_icon1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/download_bg2"
                android:layout_marginTop="14dp"
                android:layout_marginLeft="18dp"
                app:layout_constraintLeft_toRightOf="@+id/download_img1"
                app:layout_constraintTop_toTopOf="@+id/download_img1">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="App安卓版本"
                android:textColor="#ffffffff"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                app:layout_constraintTop_toTopOf="@+id/image_icon1"
                app:layout_constraintBottom_toBottomOf="@+id/image_icon1"
                app:layout_constraintLeft_toRightOf="@+id/image_icon1"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="安卓机型可以通过应用商城中查找阜阳市人民医院互联网医院-医生端，进行搜索安卓应用（安卓版本商城下载仅支持华为，小米）。"
                android:textColor="#ffffffff"
                android:textSize="13sp"
                android:layout_marginTop="19dp"
                android:layout_marginRight="29dp"
                app:layout_constraintTop_toBottomOf="@+id/image_icon1"
                app:layout_constraintLeft_toLeftOf="@+id/image_icon1"
                app:layout_constraintRight_toRightOf="parent"/>

            <ImageView
                android:id="@+id/image_icon2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/arrow_blue"
                android:layout_marginTop="44dp"
                android:layout_marginLeft="20dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/download_img1">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="App苹果版本"
                android:textColor="#ff4389e1"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                app:layout_constraintTop_toTopOf="@+id/image_icon2"
                app:layout_constraintBottom_toBottomOf="@+id/image_icon2"
                app:layout_constraintLeft_toRightOf="@+id/image_icon2"/>
            <ImageView
                android:id="@+id/image_circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/circle_blue"
                android:layout_marginTop="59dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/image_icon2">
            </ImageView>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="苹果版本可以在AppStore中进行下载安装 ，同时也可以通过链接地址中进行下载，链接地址为：http://b.liruitech.cn:15921/download/down.html
    \n该链接地址是通过应用宝跳转下载，安卓和苹果都可以在此下载使用。"
                android:textColor="#ff383838"
                android:textSize="13sp"
                android:layout_marginTop="19dp"
                android:layout_marginRight="20dp"
                app:layout_constraintTop_toBottomOf="@+id/image_icon2"
                app:layout_constraintLeft_toLeftOf="@+id/image_icon2"
                app:layout_constraintRight_toLeftOf="@+id/download_img2"/>
            <ImageView
                android:id="@+id/download_bg2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/download_bg3"
                android:layout_marginTop="120dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/image_icon2">
            </ImageView>
            <ImageView
                android:id="@+id/download_img2"
                android:layout_width="145dp"
                android:layout_height="255dp"
                android:layout_marginRight="10dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/image_icon2">
            </ImageView>

            <ImageView
                android:id="@+id/download_img3"
                android:layout_width="145dp"
                android:layout_height="255dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/download_img2">
            </ImageView>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/download_bg2"
                app:layout_constraintBottom_toBottomOf="@+id/download_bg2"
                app:layout_constraintLeft_toRightOf="@+id/download_img3"
                app:layout_constraintRight_toRightOf="parent">
                <ImageView
                    android:id="@+id/image_icon3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/download_bg2"
                    android:layout_marginTop="14dp"
                    android:layout_marginLeft="18dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent">
                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="登录"
                    android:textColor="#ffffffff"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    app:layout_constraintTop_toTopOf="@+id/image_icon3"
                    app:layout_constraintBottom_toBottomOf="@+id/image_icon3"
                    app:layout_constraintLeft_toRightOf="@+id/image_icon3"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="App登录时通过手机号验证码，进行登录，安卓机型需要同意用户服务协议和隐私政策。"
                    android:textColor="#ffffffff"
                    android:textSize="13sp"
                    android:layout_marginTop="19dp"
                    android:layout_marginRight="29dp"
                    app:layout_constraintTop_toBottomOf="@+id/image_icon3"
                    app:layout_constraintLeft_toLeftOf="@+id/image_icon3"
                    app:layout_constraintRight_toRightOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageView
                android:id="@+id/image_icon4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/arrow_blue"
                android:layout_marginTop="44dp"
                android:layout_marginLeft="20dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/download_img3">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="实名认证"
                android:textColor="#ff4389e1"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                app:layout_constraintTop_toTopOf="@+id/image_icon4"
                app:layout_constraintBottom_toBottomOf="@+id/image_icon4"
                app:layout_constraintLeft_toRightOf="@+id/image_icon4"/>
            <TextView
                android:id="@+id/text2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="用户首次登录时会提示需要进行实名认证，用户实名认证需要填入如姓名，性别等一些信息。用户填入实名认证提交之后显示的状态为未审核，等待审核人员审核之后显示的是已认证。"
                android:textColor="#ff383838"
                android:textSize="13sp"
                android:layout_marginTop="18dp"
                android:layout_marginRight="25dp"
                app:layout_constraintTop_toBottomOf="@+id/image_icon4"
                app:layout_constraintLeft_toLeftOf="@+id/image_icon4"
                app:layout_constraintRight_toRightOf="parent"/>
            <ImageView
                android:id="@+id/image_circle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/circle_blue_right"
                android:layout_marginTop="22dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text2">
            </ImageView>

            <com.gigamole.library.ShadowLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:sl_shadow_angle="90"
                app:sl_shadow_color="@color/grey_txt"
                android:id="@+id/s1"
                app:sl_shadow_distance="3dp"
                app:sl_shadow_radius="2dp"
                app:sl_shadowed="true"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="30dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text2">
            <ImageView
                android:id="@+id/download_img4"
                android:layout_width="100dp"
                android:layout_height="195dp"
                >
            </ImageView>
            </com.gigamole.library.ShadowLayout>


            <com.gigamole.library.ShadowLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:sl_shadow_angle="90"
                app:sl_shadow_color="@color/grey_txt"
                android:id="@+id/s2"
                app:sl_shadow_distance="3dp"
                app:sl_shadow_radius="2dp"
                app:sl_shadowed="true"
                android:layout_marginRight="60dp"
                android:layout_marginTop="30dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text2">
            <ImageView
                android:id="@+id/download_img5"
                android:layout_width="100dp"
                android:layout_height="195dp"
                >
            </ImageView>
            </com.gigamole.library.ShadowLayout>

            <ImageView
                android:id="@+id/download_bg4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/download_bg4"
                android:layout_marginTop="38dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/s1">
            </ImageView>
            <ImageView
                android:id="@+id/image_icon5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/download_bg2"
                android:layout_marginTop="76dp"
                android:layout_marginLeft="20dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@+id/download_bg4">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="首页展示"
                android:textColor="#ffffffff"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                app:layout_constraintTop_toTopOf="@+id/image_icon5"
                app:layout_constraintBottom_toBottomOf="@+id/image_icon5"
                app:layout_constraintLeft_toRightOf="@+id/image_icon5"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="首页展示内容有三大块：未开始会议、以往会议和学术文章。 未开始会议和以往会议内容均为：参会人员、会议内容、会议要求以及会议地址和时间等内容； 学术文章：学术文章方便医生浏览一些专业的文章提升自身的技能。"
                android:textColor="#ffffffff"
                android:textSize="13sp"
                android:layout_marginTop="19dp"
                android:layout_marginRight="21dp"
                app:layout_constraintTop_toBottomOf="@+id/image_icon5"
                app:layout_constraintLeft_toLeftOf="@+id/image_icon5"
                app:layout_constraintRight_toLeftOf="@+id/s3"/>

            <com.gigamole.library.ShadowLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:sl_shadow_angle="90"
                app:sl_shadow_color="@color/grey_txt"
                android:id="@+id/s3"
                app:sl_shadow_distance="3dp"
                app:sl_shadow_radius="2dp"
                app:sl_shadowed="true"
                android:layout_marginRight="18dp"
                android:layout_marginTop="16dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/download_bg4">
            <ImageView
                android:id="@+id/download_img6"
                android:layout_width="120dp"
                android:layout_height="400dp"
                >
            </ImageView>
            </com.gigamole.library.ShadowLayout>

            <ImageView
                android:id="@+id/image_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/download_bg_bottom"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">
            </ImageView>

            <com.gigamole.library.ShadowLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:sl_shadow_angle="90"
                app:sl_shadow_color="@color/grey_txt"
                android:id="@+id/s4"
                app:sl_shadow_distance="3dp"
                app:sl_shadow_radius="2dp"
                app:sl_shadowed="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="38dp"
                android:layout_marginBottom="45dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/s3"
                app:layout_constraintBottom_toBottomOf="parent">
            <ImageView
                android:id="@+id/download_img7"
                android:layout_width="120dp"
                android:layout_height="300dp"
                >
            </ImageView>
            </com.gigamole.library.ShadowLayout>

            <ImageView
                android:id="@+id/image_icon6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/arrow_blue"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="24dp"
                app:layout_constraintLeft_toRightOf="@+id/s4"
                app:layout_constraintTop_toTopOf="@+id/s4">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="工作台"
                android:textColor="#ff4389e1"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                app:layout_constraintTop_toTopOf="@+id/image_icon6"
                app:layout_constraintBottom_toBottomOf="@+id/image_icon6"
                app:layout_constraintLeft_toRightOf="@+id/image_icon6"/>
            <ImageView
                android:id="@+id/image_circle3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/circle_blue_right"
                android:layout_marginTop="11dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/s4">
            </ImageView>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="工作台显示的内容：图文问诊，电话问诊，视频问诊，开处方，转诊管理，慢病管理，我的患者，任务中心，在线教育，心理咨询。"
                android:textColor="#ff383838"
                android:textSize="13sp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"
                app:layout_constraintTop_toBottomOf="@+id/image_icon6"
                app:layout_constraintLeft_toLeftOf="@+id/image_icon6"
                app:layout_constraintRight_toRightOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    <com.tencent.qcloud.tuikit.tuichat.fromApp.view.MyTextView
        android:id="@+id/work_fragment_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_corner_btn_group1_click"
        android:textColor="#fff"
        android:paddingLeft="20dp"
        android:paddingTop="8dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="8dp"
        android:text="工作台"
        android:textSize="@dimen/font_14"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line1"/>
</androidx.constraintlayout.widget.ConstraintLayout>
