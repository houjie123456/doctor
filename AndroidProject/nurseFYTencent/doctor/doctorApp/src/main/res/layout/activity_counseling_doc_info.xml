<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imageView28"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/counseling_doc_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <include
        android:id="@+id/head_layout"
        layout="@layout/layout_head_base_transparent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tencent.qcloud.tuikit.tuichat.fromApp.view.RoundImageView
        android:id="@+id/doc_head"
        android:layout_width="87dp"
        android:layout_height="87dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/img_me_photo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/head_layout" />

    <LinearLayout
        android:id="@+id/doc_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/doc_head"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <com.tencent.qcloud.tuikit.tuichat.fromApp.view.MyTextView
            android:id="@+id/doc_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#454545"
            android:textSize="16sp"
            android:layout_marginRight="11dp"
            android:text="姓名"/>
        <com.tencent.qcloud.tuikit.tuichat.fromApp.view.MyTextView
            android:id="@+id/doc_dept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#454545"
            android:textSize="14sp"
            android:layout_marginRight="11dp"
            android:text="科室"/>
        <com.tencent.qcloud.tuikit.tuichat.fromApp.view.MyTextView
            android:id="@+id/doc_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#454545"
            android:textSize="14sp"
            android:text="职称"/>
    </LinearLayout>


    <com.tencent.qcloud.tuikit.tuichat.fromApp.view.MyTextView
        android:id="@+id/doc_hospital"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="阜阳医院"
        android:textColor="#333333"
        android:textSize="14sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/doc_layout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <com.tencent.qcloud.tuikit.tuichat.fromApp.view.MyTextView
        android:id="@+id/doc_hospital_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="三级甲等"
        android:textColor="@color/white"
        android:textSize="11sp"
        android:layout_marginLeft="6dp"
        android:padding="3dp"
        android:background="@drawable/shape_corner_state"
        app:layout_constraintTop_toTopOf="@+id/doc_hospital"
        app:layout_constraintLeft_toRightOf="@+id/doc_hospital"
        app:layout_constraintBottom_toBottomOf="@+id/doc_hospital"/>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/service_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="42dp"
        android:background="@drawable/shape_shadow_card_no"
        android:paddingBottom="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/doc_hospital">
        <com.tencent.qcloud.tuikit.tuichat.fromApp.view.MyTextView
            android:id="@+id/textView001"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="服务包"
            android:textColor="#333333"
            android:textSize="16sp"
            android:layout_marginTop="11dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/picture_service"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/picture_service"
            android:layout_width="105dp"
            android:layout_height="130dp"
            android:background="@drawable/shape_shadow_card"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/textView001"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/video_service">

            <com.tencent.qcloud.tuikit.tuichat.fromApp.view.MyTextView
                android:id="@+id/state_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_corner_state_counseling"
                android:text="空闲"
                android:textColor="#377BFB"
                android:textSize="12sp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">
                <com.tencent.qcloud.tuikit.tuichat.fromApp.view.MyTextView
                    android:id="@+id/textView01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="图文咨询"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/money_txt"/>
                <com.tencent.qcloud.tuikit.tuichat.fromApp.view.MyTextView
                    android:id="@+id/money_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0元/次"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    app:layout_constraintTop_toBottomOf="@+id/textView01"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/video_service"
            android:layout_width="105dp"
            android:layout_height="130dp"
            android:background="@drawable/shape_shadow_card_no"
            app:layout_constraintTop_toTopOf="@+id/picture_service"
            app:layout_constraintLeft_toRightOf="@+id/picture_service"
            app:layout_constraintRight_toLeftOf="@+id/voice_service">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">
                <com.tencent.qcloud.tuikit.tuichat.fromApp.view.MyTextView
                    android:id="@+id/textView02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="视频咨询"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/money_txt"/>
                <com.tencent.qcloud.tuikit.tuichat.fromApp.view.MyTextView
                    android:id="@+id/money2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="暂未开通"
                    android:textColor="#5A5A5A"
                    android:textSize="12sp"
                    app:layout_constraintTop_toBottomOf="@+id/textView01"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/voice_service"
            android:layout_width="105dp"
            android:layout_height="130dp"
            android:background="@drawable/shape_shadow_card_no"
            app:layout_constraintTop_toTopOf="@+id/picture_service"
            app:layout_constraintLeft_toRightOf="@+id/video_service"
            app:layout_constraintRight_toRightOf="parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">
                <com.tencent.qcloud.tuikit.tuichat.fromApp.view.MyTextView
                    android:id="@+id/textView03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="语音咨询"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/money_txt"/>
                <com.tencent.qcloud.tuikit.tuichat.fromApp.view.MyTextView
                    android:id="@+id/money3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="暂未开通"
                    android:textColor="#5A5A5A"
                    android:textSize="12sp"
                    app:layout_constraintTop_toBottomOf="@+id/textView01"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>



    <com.tencent.qcloud.tuikit.tuichat.fromApp.view.MyTextView
        android:id="@+id/ask_now"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="17dp"
        android:paddingBottom="17dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#7B9CFD"
        android:text="立即咨询"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:gravity="center">


    </com.tencent.qcloud.tuikit.tuichat.fromApp.view.MyTextView>


</androidx.constraintlayout.widget.ConstraintLayout>