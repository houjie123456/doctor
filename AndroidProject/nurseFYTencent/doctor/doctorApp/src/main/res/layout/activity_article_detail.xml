<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:background="#fff">

    <include
        android:id="@+id/head_layout"
        layout="@layout/layout_head_base"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:layout_marginTop="10dp"
    android:scrollbars="none"
    app:layout_constraintTop_toBottomOf="@+id/head_layout"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/article_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="多学科联合，不断提升医疗服务能力，促进“和心脏病”学科发展"
            android:textColor="#ff1b1b1b"
            android:textSize="18sp"
            android:textStyle="bold"
            android:lineSpacingMultiplier="1.3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <TextView
            android:id="@+id/article_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="主讲人：黄成奇、许颍"
            android:textColor="#ff666666"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/article_title"
            app:layout_constraintLeft_toLeftOf="@+id/article_title"/>

        <ImageView
            android:id="@+id/img_time"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/img_icon"
            android:layout_marginTop="13dp"
            app:layout_constraintTop_toBottomOf="@+id/article_subtitle"
            app:layout_constraintLeft_toLeftOf="@+id/article_title"/>

        <TextView
            android:id="@+id/article_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2020年3月15日9:00-11:00"
            android:textColor="#ff4d4d4d"
            android:textSize="14sp"
            android:layout_marginLeft="5dp"
            app:layout_constraintTop_toTopOf="@+id/img_time"
            app:layout_constraintBottom_toBottomOf="@+id/img_time"
            app:layout_constraintLeft_toRightOf="@+id/img_time"/>


        <TextView
            android:id="@+id/article_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="2020年3月15日92020年3月15日92020年3月15日92020年3月15日9"
            app:layout_constraintTop_toBottomOf="@+id/img_time"
            app:layout_constraintLeft_toLeftOf="@+id/article_title"
            app:layout_constraintRight_toRightOf="@+id/article_title"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>