<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="40dp"
    android:padding="20dp"
    android:background="@drawable/dialog_bg_style">

    <com.tencent.qcloud.tuikit.tuichat.fromApp.view.MyTextView
        android:id="@+id/dialog_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="服务协议和隐私政策"
        android:textSize="@dimen/font_18"
        android:textColor="#323232"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical">
        <com.tencent.qcloud.tuikit.tuichat.fromApp.view.MyTextView
            android:id="@+id/dialog_item_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请你务必审慎阅读、充分理解“服务协议”和“隐私政策”各条款，包括但不限于：为了向你提供即时通讯、内容分享等服务，我们需要收集你的设备信息、操作日志等个人信息。你可以在“设置”中查看、变更、删除个人信息并管理你的授权。"
            android:textSize="@dimen/font_16"
            android:textColor="#323232"
            android:lineSpacingExtra="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <com.tencent.qcloud.tuikit.tuichat.fromApp.view.MyTextView
            android:id="@+id/dialog_item_txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="你可阅读"
            android:textSize="@dimen/font_16"
            android:textColor="#323232"
            android:layout_marginTop="10dp"
            android:lineSpacingExtra="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dialog_item_txt"/>
        <com.tencent.qcloud.tuikit.tuichat.fromApp.view.MyTextView
            android:id="@+id/dialog_item_serve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《用户服务协议》"
            android:textSize="@dimen/font_16"
            android:textColor="#4b85fe"
            android:lineSpacingExtra="10dp"
            app:layout_constraintLeft_toRightOf="@+id/dialog_item_txt2"
            app:layout_constraintTop_toTopOf="@+id/dialog_item_txt2"/>
        <com.tencent.qcloud.tuikit.tuichat.fromApp.view.MyTextView
            android:id="@+id/dialog_item_txt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="和"
            android:textSize="@dimen/font_16"
            android:textColor="#323232"
            android:lineSpacingExtra="10dp"
            app:layout_constraintLeft_toRightOf="@+id/dialog_item_serve"
            app:layout_constraintTop_toTopOf="@+id/dialog_item_txt2"/>
        <com.tencent.qcloud.tuikit.tuichat.fromApp.view.MyTextView
            android:id="@+id/dialog_item_secret"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《隐私政策》"
            android:textSize="@dimen/font_16"
            android:textColor="#4b85fe"
            android:lineSpacingExtra="10dp"
            app:layout_constraintLeft_toRightOf="@+id/dialog_item_txt3"
            app:layout_constraintTop_toTopOf="@+id/dialog_item_txt2"/>
        <com.tencent.qcloud.tuikit.tuichat.fromApp.view.MyTextView
            android:id="@+id/dialog_item_txt4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="了解详细信息。如你同意，请点击“同意”开始接受我们的服务。"
            android:textSize="@dimen/font_16"
            android:textColor="#323232"
            android:layout_marginTop="10dp"
            android:lineSpacingExtra="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dialog_item_txt2"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="20dp">

        <com.tencent.qcloud.tuikit.tuichat.fromApp.view.MyTextView
            android:id="@+id/dialog_item_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="暂不使用"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="@dimen/font_16"
            android:background="@drawable/shape_base_btn_style"
            android:layout_marginRight="15dp"/>

        <com.tencent.qcloud.tuikit.tuichat.fromApp.view.MyTextView
            android:id="@+id/dialog_item_sure"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="同意"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="@dimen/font_16"
            android:background="@drawable/shape_base_btn_style"/>
    </LinearLayout>

</LinearLayout>