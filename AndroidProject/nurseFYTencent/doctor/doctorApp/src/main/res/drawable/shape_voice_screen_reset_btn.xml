<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
<!--第一层阴影-->
<item>
    <shape android:shape="rectangle">
        <solid android:color="#DAE1EB" />
        <corners android:topLeftRadius="6dp" android:topRightRadius="0dp" android:bottomLeftRadius="0dp" android:bottomRightRadius="0dp" />
    </shape>
</item>
<!--第二层前景-->
<item
    android:bottom="1dp"
    android:left="1dp"
    android:right="1dp"
    android:top="1dp">
    <shape android:shape="rectangle">
        <solid android:color="@android:color/white"/>
        <corners android:topLeftRadius="6dp" android:topRightRadius="0dp" android:bottomLeftRadius="0dp" android:bottomRightRadius="0dp" />
    </shape>
</item>
</layer-list>